generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  fname    String
  lname    String
  username String @unique
  password String
  roleId   Int
  role     Role   @relation(fields: [roleId], references: [id], onDelete: Restrict)
  
  @@map("users")
}

model Role {
  id        Int    @id @default(autoincrement())
  name      String
  roleCode  String @unique

  users     User[]

  @@map("roles")
}